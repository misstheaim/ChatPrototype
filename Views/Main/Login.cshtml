<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
</head>
<body>
    <h1>Enter your Username and password to login</h1>
    <form method="post">
        <p>
            <label>Username</label>
            <input onsubmit="event.preventDefault()" name="username" />
        </p>
        
        <p>
            <label>Password</label>
            <input onsubmit="event.preventDefault()" type="password" name="password" />
        </p>
        <input class="submit" type="submit" value="login" />
    </form>
</body>
<script>
    let submit_buttom = document.querySelector('.submit');
    submit_buttom.onsubmit = async function() {
        event.preventDefault();
        let port = ":" + document.location.port;
        let url = "https://" + document.location.hostname + port + "@Url.Action("Login", "Main")";
        let response = await fetch(url, {
            method: 'POST',
        });
        let result = await response.json()
        alert(result.message);
    }
</script>
</html>